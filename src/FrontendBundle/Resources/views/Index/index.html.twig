{% extends 'FrontendBundle::frontend_base.html.twig' %}
{% block content %}
    <header class="main-header">
        {% set active=active is defined?active:'' %}

        <!-- Logo -->

        <nav class="navbar navbar-default navbar-top navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a data-href="#inicio" class="scroll-efect">INICIO</a></li>
                        <li><a data-href="#services" class="scroll-efect">INICIAR SESIÓN</a></li>
                        {% if is_granted('ROLE_USER') %}
                            <li><a href="{{ path('fos_user_security_logout') }}">SALIR</a></li>
                        {% endif %}
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>

    </header>
    <section id="inicio" class="page section-1">
        <div class="container">
            <div class="content cover text-center">
                <img class="img-responsive" src="{{ asset('bundles/frontend/img/logo.png') }}">
                <div class="col-lg-12">
                    <a class="title"><strong>PLATAFORMA WEB CONTABLE ADMNISTRATIVA</strong></a>
                    {% if is_granted('ROLE_USER')==false %}
                        <a class="btn btn-primary flat"
                           href="{{ path('fos_user_security_login') }}">INICIAR SESIÓN</a>
                    {% endif %}

                </div>
            </div>
        </div>

    </section>
    <section id="services" class="container section-2 padding-top-30 padding-bottom-30">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center text-uppercase">
                    ¿Qué puedes hacer en la plataforma?
                </h1>
                <div class="divider-border">
                    <div class="divider-border-inner"></div>
                </div>
                <div class="row padding-top-10 padding-bottom-10">
                    <div class="col-md-12">
                        <h3 class="text-center">
                            Realiza tu propio plan de cuentas.
                        </h3>
                        <h3 class="text-center">
                            Ingresa movimiento de diarios, ingresos y egresos.
                        </h3>
                        <h3 class="text-center">
                            Obtén estados financieros como balance de comprobación, estados de resultados y
                                estado de situación.
                        </h3>
                        <h3 class="text-center">
                            Ten siempre listo: Libro Diario y Libro Mayor.
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}